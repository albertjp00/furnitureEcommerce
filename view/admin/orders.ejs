    var startOfWeekFormatted = startOfWeek.format("MMMM Do YYYY");
    var endOfWeekFormatted = endOfWeek.format("MMMM Do YYYY");
    minDate.val(startOfWeekFormatted); // this is the mistake i did in previous code
